.account-content {
    display: grid;
    gap: 0.9rem;
}

.account-panel {
    border: 1px solid var(--border);
    border-radius: 10px;
    background: #ffffff;
    padding: 0.95rem;
    box-shadow: var(--shadow);
}

.account-panel h2 {
