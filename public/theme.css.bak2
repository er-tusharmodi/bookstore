}

.account-menu {
    margin: 0.75rem 0 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.45rem;
}

.account-menu a {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.4rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    background: #ffffff;
    color: #111827;
    font-size: 0.84rem;
    font-weight: 700;
    padding: 0.55rem 0.65rem;
}

.account-menu a:hover,
.account-menu a.active {
    border-color: #007185;
    background: #eef9fb;
