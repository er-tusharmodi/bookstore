}

.account-top-links a:hover,
.account-top-links a.active {
    border-color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
}

.account-main {
    padding-top: 1rem;
}

.account-layout {
    margin-top: 0.8rem;
    display: grid;
    grid-template-columns: 250px minmax(0, 1fr);
    gap: 0.9rem;
    align-items: start;
}

.account-sidebar {
    position: sticky;
    top: 86px;
    border: 1px solid var(--border);
    border-radius: 10px;
    background: #ffffff;
    padding: 0.9rem;
    box-shadow: var(--shadow);
}

.account-sidebar h2 {
    margin: 0;
