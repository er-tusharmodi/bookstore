    font-size: 1.05rem;
}

.account-subtitle {
    margin: 0.2rem 0 0;
    color: var(--muted);
    font-size: 0.84rem;
}

.account-kpi-grid {
    margin-top: 0.8rem;
    display: grid;
    gap: 0.65rem;
    grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
}

.account-kpi {
    border: 1px solid var(--border);
    border-radius: 8px;
    background: #ffffff;
